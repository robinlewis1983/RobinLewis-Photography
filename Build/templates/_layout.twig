<!DOCTYPE html>
<html lang="{{ craft.app.language }}">

    <head>
           
            <meta charset="UTF-8">

            <title>
            
            {% if entry is defined and entry.title %}

                {{ entry.title }} | Robin Lewis Photography | Bristol UK | Portrait | Branding | Family Photography | Content Creation

            {% endif %}

            </title>

            <link href="./style.css" type="text/css" rel="stylesheet">

            <meta name="viewport" content="width=device-width, initial-scale=1.0">


        
        {% do craft.app.view.registerCssFile('@web/styles.css') %}

    </head>



  <body>

    <header class="header">

        <div class="header-logo">

         {% for logoQuery in craft.entries.section("globalLogo").all() %}

                 <a href="./" ><img src="{{ logoQuery.image.one().getUrl() }}" alt="{{ logoQuery.image.one().alt ?? 'Default alt text' }}"></a>

              {% endfor %}
        
        </div>
{# -------- Main NAV --------- #}
        <nav class="header-nav"> 
            <ul>
                <li class="header-nav-li"><a href="/" class="{{ craft.app.request.url == '/' ? 'active' : '' }}">Home</a></li>
                <li class="header-nav-li"><a href="#about" class="{{ craft.app.request.url == '/about' ? 'active' : '' }}" >About</a></li>
                <li class="header-nav-li"><a href="#testimonials"  class="{{ craft.app.request.url == '/testimonials' ? 'active' : '' }}" >Testimonials</a></li>
                <li class="header-nav-li"><a href="#contact" class="{{ craft.app.request.url == '/contact' ? 'active' : '' }}" >Contact </a></li>
                
            </ul>
        </nav>
{# -------- Secondary  NAV --------- #}

          <nav class="header-secondary-nav">
        <ul>
            <li class="header-secondary-nav-li"><a href="./portraits">Portrait</a></li>
            |
            <li class="header-secondary-nav-li"><a href="./">Family</a></li>
            |
            <li class="header-secondary-nav-li"><a href="./b">Branding</a></li>
        </ul>
    </nav>

    </header>

<main>

    {% block content %}
      {# fill with content blocks #}
    {% endblock %}
  </body>

</main>

<footer class="footer">



<div>
{% include 'includes/cp.socials.twig' %}
</div>

<p>All images - Copywrite Robin Lewis</P>



</footer>

</html>
