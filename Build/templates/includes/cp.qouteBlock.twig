
{% set qouteBlockTilte = qouteBlockTilte ?? null %}
{% set qouteText1 = qouteText1 ?? null %}
{% set qouteText2 = qouteText2 ?? null %}
{% set qouteText3 = qouteText3 ?? null %}

{% set clientName1 = clientName1 ?? null %}
{% set clientName2 = clientName2 ?? null %}
{% set clientName3 = clientName3 ?? null %}



    <div class="qouteGrid">

      <h1 class="qouteTitle underLine"> {{qouteBlockTilte | title }} </h1>

                {% for i in 1..3 %} {#  This for is to add a 1,2 or 3 to the below variables so YOu dont need to do the code 3 times. #}
                    
                     {% set clientName = attribute(_context, 'clientName' ~ i) %}
                     {% set qouteText = attribute(_context, 'qouteText' ~ i) %}

                    <div class=" qoute-{{ i }}  qoutePadding">
                        <div class="underLine">
                            <h2>{{clientName}}</h2>
                            <q>{{qouteText}}</q>
                        </div>
                    </div>


                {% endfor %}
    </div>   
