    <div class="block-grid">

    <div class="grid-block">

            {% if gridImage1 | length %}
                    <div class="gridImage">
                        {% set imageQuery = gridImage1.one() %}
                        <img src="{{ imageQuery.getUrl() }}" alt="{{ imageQuery.alt ?? 'Default alt text' }}" >
                    </div>
            {% endif %}

            <div class="titleLink">

            {% if gridTitle1 | length %} 
                    <a href=" {{ gridLink1 }} " > <h1 class="underLineBig"> {{ gridTitle1 |upper }} </h1></a>
            {% endif %}

        </div>



        </div>   {# ------ End block 1 ------ #}


