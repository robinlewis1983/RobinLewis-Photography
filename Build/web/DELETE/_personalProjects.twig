{% extends '_layout' %}

{% block content %}

{# -----Secondary nav------ #}

  {% include 'includes/cp.secondaryNav.twig'%}

{# -----/Secondary nav------ #}  

  <div class="image-grid top-div-global">
    {% set portfolioImageQuery = entry.portfolioImageMatrix.all() %}

    {% for portfolioImagePrint in portfolioImageQuery %}
        <div class="grid-item">
            {% include 'includes/cp.ImageCollageGrid.twig' with {
                imageSelect: portfolioImagePrint.image,
                imageOrientation: portfolioImagePrint.imageOrientation,
                galleryTitle: portfolioImagePrint.galleryTextTitle,
                galleryBlurb: portfolioImagePrint.galleryText
            } %}
        </div>
    {% endfor %}
</div>

{% endblock %}
















